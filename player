local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local correctKey = "Sown123" -- Key m√† b·∫°n mu·ªën ng∆∞·ªùi d√πng nh·∫≠p

-- T·∫°o c·ª≠a s·ªï nh·∫≠p key
local KeyWindow = Rayfield:CreateWindow({
    Name = "Nh·∫≠p Key ƒë·ªÉ ti·∫øp t·ª•c",
    LoadingTitle = "ƒêang t·∫£i h·ªá th·ªëng",
    LoadingSubtitle = "Vui l√≤ng nh·∫≠p key",
    Theme = "Default",
    ConfigurationSaving = {
        Enabled = true, -- T√πy ch·ªçn n√†y kh√¥ng ·∫£nh h∆∞·ªüng ƒë·∫øn l∆∞u key th·ªß c√¥ng
        FolderName = nil,
        FileName = "Pig's food hub"
    },
    KeySystem = false -- Kh√¥ng s·ª≠ d·ª•ng KeySystem c·ªßa Rayfield
})

-- T·∫°o m·ªôt tab nh·∫≠p key
local KeyTab = KeyWindow:CreateTab("Nh·∫≠p Key")

-- T·∫°o m·ªôt bi·∫øn ƒë·ªÉ l∆∞u tr·∫°ng th√°i nh·∫≠p key
local isKeyValid = false

KeyTab:CreateInput({
    Name = "Nh·∫≠p Key:",
    PlaceholderText = "Nh·∫≠p key c·ªßa b·∫°n...",
    RemoveTextAfterFocusLost = false,
    Callback = function(Value)
        if Value == correctKey then
            isKeyValid = true
            Rayfield:Notify({
                Title = "Key h·ª£p l·ªá!",
                Content = "ƒêang m·ªü ph·∫ßn ch√≠nh...",
                Duration = 3,
                Image = nil,
                Actions = {
                    Ignore = {
                        Name = "OK",
                        Callback = function() end
                    }
                }
            })
            
            -- X√≥a KeyWindow v√† hi·ªÉn th·ªã MainWindow sau 0.1 gi√¢y ƒë·ªÉ ƒë·∫£m b·∫£o
            wait(0.1) -- ƒê·∫£m b·∫£o r·∫±ng KeyWindow ƒë∆∞·ª£c x√≥a tr∆∞·ªõc khi t·∫°o MainWindow
            KeyWindow:Destroy()  -- X√≥a c·ª≠a s·ªï nh·∫≠p key
            
            createMainWindow() -- G·ªçi h√†m t·∫°o giao di·ªán ch√≠nh
        else
            Rayfield:Notify({
                Title = "Key kh√¥ng h·ª£p l·ªá!",
                Content = "Vui l√≤ng th·ª≠ l·∫°i.",
                Duration = 3,
                Image = nil,
                Actions = {
                    Ignore = {
                        Name = "OK",
                        Callback = function() end
                    }
                }
            })
        end
    end
})

-- H√†m t·∫°o giao di·ªán ch√≠nh
function createMainWindow()
    local MainWindow = Rayfield:CreateWindow({
        Name = "N·ªìi c√°m h·ª£iü§ë",
        Icon = 0,
        LoadingTitle = "„Ää„Ää„Ää ƒêANG LOAD „Äã„Äã„Äã",
        LoadingSubtitle = "script beta by S",
        Theme = "Default",
        ConfigurationSaving = {
            Enabled = false, -- T·∫Øt l∆∞u tr·ªØ d·ªØ li·ªáu c·ªßa MainWindow
            FolderName = nil,
            FileName = "Pig's food hub"
        },
        Discord = {
            Enabled = false,
            Invite = "noinvitelink",
            RememberJoins = true
        }
    })

    local MainTab = MainWindow:CreateTab("local playerüî•")

    -- Th√™m Toggle Fly
    local isFlying = false

    local function toggleFly(state)
        local character = game.Players.LocalPlayer.Character or game.Players.LocalPlayer.CharacterAdded:Wait()
        local humanoid = character:FindFirstChild("Humanoid")
        local primaryPart = character.PrimaryPart

        if state then
            humanoid.PlatformStand = true
            local flyPart = Instance.new("BodyVelocity", primaryPart)
            flyPart.Velocity = Vector3.new(0, 50, 0)
            flyPart.MaxForce = Vector3.new(100000, 100000, 100000)
            flyPart.Name = "FlyVelocity"
        else
            local flyVelocity = primaryPart:FindFirstChild("FlyVelocity")
            if flyVelocity then
                flyVelocity:Destroy()
            end
            humanoid.PlatformStand = false
        end
    end

    MainTab:CreateToggle({
        Name = "Enable/Disable Fly",
        CurrentValue = false,
        Flag = "FlyToggle",
        Callback = function(Value)
            toggleFly(Value)
        end,
    })
end
