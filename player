local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local HttpService = game:GetService("HttpService")
local RunService = game:GetService("RunService")
local TeleportService = game:GetService("TeleportService")
local players = game:GetService("Players")
local wrk = game:GetService("Workspace")
local plr = players.LocalPlayer
local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
local humanoid = plr.Character:FindFirstChild("Humanoid")

local function onCharacterAdded(character)
    hrp = character:WaitForChild("HumanoidRootPart")
    humanoid = character:WaitForChild("Humanoid")
end

plr.CharacterAdded:Connect(onCharacterAdded)

if plr.Character then
    onCharacterAdded(plr.Character)
end
local Window = Rayfield:CreateWindow({
    Name = "▶ Universal script ◀",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "by LSown🥵",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "UniversalHub",
        FileName = "byAgreed"
    },
})

local tab1 = Window:CreateTab("local player")
tab1:CreateInput({
    Name = "Tốc độ di chuyển",
    PlaceholderText = "Nhập tốc độ",
    RemoveTextAfterFocusLost = false,
    Callback = function(value)
        local newSpeed = tonumber(value)
        if newSpeed and newSpeed > 0 then
            if plr.Character and plr.Character:FindFirstChild("Humanoid") then
                plr.Character.Humanoid.WalkSpeed = newSpeed
            end
        end
    end
})

local function showSpeedNotification(speed)
    if speed > 0 then
        Rayfield:Notify({
            Title = "Tốc Độ Đã Được Cập Nhật",
            Content = "Tốc độ của bạn đã được đặt thành: " .. speed,
            Duration = 3
        })
    else
        Rayfield:Notify({
            Title = "Lỗi",
            Content = "Giá trị tốc độ không hợp lệ! Hãy nhập số lớn hơn 0.",
            Duration = 3
        })
    end
end

local function setPlayerSpeed(value)
    local speed = tonumber(value)
    if speed and speed > 0 then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speed
        showSpeedNotification(speed)
    else
        showSpeedNotification(0)
    end
end

setPlayerSpeed("50") -- Ví dụ đặt tốc độ hợp lệ
setPlayerSpeed("abc") -- Ví dụ đặt tốc độ không hợp lệ
