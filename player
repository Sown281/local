    LoadingSubtitle = "by LSownü•µ",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "UniversalHub",
        FileName = "byAgreed"
    },
})


local tab1 = Window:CreateTab("local player")
tab1:CreateInput({
    Name = "New Speed",
    PlaceholderText = ("Text Input"),
    RemoveTextAfterFocusLost = false,
    Callback = function(value)
         local newSpeed = tonumber(value)
         if newSpeed and newSpeed > 0 then
              if plr.Character and plr.Character:FindFirstChild("humanoid") then
                 plr.Character.Humanoid.Walkspeed = newSpeed
              else
                   warn("kh√¥ng t√¨m th·∫•y humanoid h·ª£p l·ªá")
              end
         else
               warn("new speed kh√¥mg h·ª£p l·ªá")
         end
   end
