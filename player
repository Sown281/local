local tab1 = Window:CreateTab("local player")
tab1:CreateInput({
    Name = "Tá»‘c Ä‘á»™ di chuyá»ƒn",
    PlaceholderText = "Nháº­p tá»‘c Ä‘á»™",
    RemoveTextAfterFocusLost = false,
    Callback = function(value)
        local newSpeed = tonumber(value)
        if newSpeed and newSpeed > 0 then
            if plr.Character and plr.Character:FindFirstChild("Humanoid") then
                plr.Character.Humanoid.WalkSpeed = newSpeed
            end
        end
    end
})

local function showSpeedNotification(speed)
    if speed > 0 then
        Rayfield:Notify({
            Title = "Tá»‘c Äá»™ ÄÃ£ ÄÆ°á»£c Cáº­p Nháº­t",
            Content = "Tá»‘c Ä‘á»™ cá»§a báº¡n Ä‘Ã£ Ä‘Æ°á»£c Ä‘áº·t thÃ nh: " .. speed,
            Duration = 3
        })
    else
        Rayfield:Notify({
            Title = "Lá»—i",
            Content = "GiÃ¡ trá»‹ tá»‘c Ä‘á»™ khÃ´ng há»£p lá»‡! HÃ£y nháº­p sá»‘ lá»›n hÆ¡n 0.",
            Duration = 3
        })
    end
end

local function setPlayerSpeed(value)
    local speed = tonumber(value)
    if speed and speed > 0 then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speed
        showSpeedNotification(speed)
    else
        showSpeedNotification(0)
    end
end

