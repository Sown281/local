    LoadingSubtitle = "by Neko",
    Theme = "Default",
    DisableRayfieldPrompts = false,

    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = false,
        FolderName = "MTF", -- ƒê·∫∑t t√™n folder d∆∞·ªõi d·∫°ng chu·ªói
        FileName = "Uni"
    },
    Discord = {
        Enabled = false,
        Invite = "noinvitelink",
        RememberJoins = true
    },
    KeySystem = true, 
    KeySettings = {
        Title = "Nh·∫≠p key ƒë·ªÉ ti·∫øp t·ª•c üëÄ",
        Subtitle = "h·ªá th·ªëng key",
        Note = "ƒë√©o c√≥ c√°ch ƒë·ªÉ l·∫•y key ƒë√¢u",
        FileName = "Key",
        SaveKey = false,
