local Tab1 = Window:CreateTab("Home", "app-window")
local PlayerSection = Tab1:CreateSection("Local Player")
local InfiniteJumpEnabled = false

Tab1:CreateToggle({
    Name = "Infinite Jump",
    CurrentValue = false,
    Flag = "ToggleInfiniteJump",
    Callback = function(Value)
        InfiniteJumpEnabled = Value
    end,
})

-- Script cho infinite jump
game:GetService("UserInputService").JumpRequest:Connect(function()
    if InfiniteJumpEnabled then
        local Player = game:GetService("Players").LocalPlayer
        if Player and Player.Character and Player.Character:FindFirstChild("Humanoid") then
            Player.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
        end
    end
end)

local SpeedValue = 16 -- T·ªëc ƒë·ªô m·∫∑c ƒë·ªãnh c·ªßa nh√¢n v·∫≠t
local Slider

-- Kh·ªüi t·∫°o Slider sau khi ƒë·∫£m b·∫£o Tab1 ƒë√£ ƒë∆∞·ª£c t·∫°o
Slider = Tab1:CreateSlider({
    Name = "Walk Speed",
    Range = {16, 300}, -- T·ªëc ƒë·ªô t·ªëi thi·ªÉu v√† t·ªëi ƒëa
    Increment = 1, -- B∆∞·ªõc tƒÉng
    Suffix = "Speed", -- ƒê∆°n v·ªã hi·ªÉn th·ªã
    CurrentValue = 16, -- Gi√° tr·ªã ban ƒë·∫ßu
    Flag = "WalkSpeedSlider",
    Callback = function(Value)
        SpeedValue = Value -- C·∫≠p nh·∫≠t gi√° tr·ªã t·ªëc ƒë·ªô
        local Player = game:GetService("Players").LocalPlayer
        if Player and Player.Character and Player.Character:FindFirstChild("Humanoid") then
            Player.Character.Humanoid.WalkSpeed = SpeedValue
        end
    end,
})

-- ƒê·∫£m b·∫£o t·ªëc ƒë·ªô ƒë∆∞·ª£c duy tr√¨
game:GetService("RunService").Stepped:Connect(function()
    local Player = game:GetService("Players").LocalPlayer
    if Player and Player.Character and Player.Character:FindFirstChild("Humanoid") then
        Player.Character.Humanoid.WalkSpeed = SpeedValue
    end
end)

-- T·∫°o n√∫t ƒë·ªÉ reset slider
Tab1:CreateButton({
    Name = "Reset Walk Speed",
    Callback = function()
        SpeedValue = 16 -- ƒê·∫∑t l·∫°i gi√° tr·ªã t·ªëc ƒë·ªô
        if Slider then
            Slider:Set(16) -- C·∫≠p nh·∫≠t slider v·ªÅ gi√° tr·ªã m·∫∑c ƒë·ªãnh
        end
        local Player = game:GetService("Players").LocalPlayer
        if Player and Player.Character and Player.Character:FindFirstChild("Humanoid") then
            Player.Character.Humanoid.WalkSpeed = SpeedValue
        end
    end,
})

-- T·∫°o tab hi·ªÉn th·ªã gi·ªù Vi·ªát Nam
local TimeTab = Window:CreateTab("Th·ªùi gian Vi·ªát Nam", "rbxassetid://4483362458")
local TimeLabel = TimeTab:CreateLabel("ƒêang l·∫•y gi·ªù...")

-- H√†m t√≠nh gi·ªù Vi·ªát Nam
local function GetVietnamTime()
    local utc = os.time(os.date("!*t")) -- L·∫•y gi·ªù UTC
    local vietnamTime = utc + 7 * 3600 -- Th√™m 7 ti·∫øng ƒë·ªÉ th√†nh UTC+7
    return os.date("Gi·ªù hi·ªán t·∫°i: %H:%M:%S", vietnamTime)
end

-- H√†m c·∫≠p nh·∫≠t gi·ªù
local function UpdateTime()
    while wait(1) do
        local time = GetVietnamTime()
        TimeLabel:Set(time)
    end
end

-- Ch·∫°y h√†m c·∫≠p nh·∫≠t gi·ªù
task.spawn(UpdateTime)
